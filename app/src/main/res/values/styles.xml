<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStylePrimary" parent="ButtonStyle">
        <item name="android:background">@drawable/click_effect_primary</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/click_effect_accent</item>
        <item name="android:layout_height">@dimen/size_component_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="customDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/edt_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shape_edt_rounded</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
